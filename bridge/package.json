{
  "name": "db-visualizer-bridge",
  "version": "0.1.0-beta.5",
  "type": "commonjs",
  "main": "dist/index.cjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.cjs",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.cjs --format=cjs --packages=external",
    "build:pkg": "pkg . --out-path exece",
    "postpkg": "node scripts/copy-native.js",
    "test": "jest",
    "test:watch": "jest --watchAll --detectOpenHandles"
  },
  "dependencies": {
    "@jest/globals": "^30.2.0",
    "@napi-rs/keyring": "^1.2.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "mysql2": "^3.15.3",
    "pg": "^8.16.3",
    "pg-query-stream": "^4.10.3",
    "pino": "^9.14.0",
    "uuid": "^8.3.2"
  },
  "bin": "./dist/index.cjs",
  "pkg": {
    "outputPath": "exece",
    "targets": [
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "assets": [
      "node_modules/**/build/Release/*.node",
      "node_modules/**/prebuilds/**/*",
      "node_modules/@nut-tree/libnut-win32/build/Release/*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.6",
    "esbuild": "^0.27.0",
    "jest": "^30.2.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}